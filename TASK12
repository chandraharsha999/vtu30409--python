        "# Text-based game simulation in Colab\n",
        "\n",
        "player_pos = 50\n",
        "enemy_pos = 400\n",
        "speed = 5\n",
        "\n",
        "def show_status():\n",
        "    print(f\"Player position: {player_pos}\")\n",
        "    print(f\"Enemy position: {enemy_pos}\")\n",
        "    print(\"-\" * 30)\n",
        "\n",
        "def move_player(direction):\n",
        "    global player_pos\n",
        "    if direction == \"right\":\n",
        "        player_pos += speed\n",
        "    elif direction == \"left\":\n",
        "        player_pos -= speed\n",
        "\n",
        "def move_enemy():\n",
        "    global enemy_pos\n",
        "    enemy_pos -= 4\n",
        "    if enemy_pos <= 0:\n",
        "        enemy_pos = 500\n",
        "\n",
        "def check_collision():\n",
        "    return abs(player_pos - enemy_pos) < 40\n",
        "\n",
        "# Game loop\n",
        "for turn in range(20):\n",
        "    show_status()\n",
        "    move = input(\"Move (left/right/none): \").strip().lower()\n",
        "    move_player(move)\n",
        "    move_enemy()\n",
        "\n",
        "    if check_collision():\n",
        "        print(\"ðŸ’¥ Game Over! You collided with the enemy.\")\n",
        "        break\n",
        "else:\n",
        "    print(\"âœ… You survived 20 turns!\")\n",
        "\n",
        "\n",
        "\n",
        "\n",
        "\n",
        "\n",
        "\n",
        ""
      ]
    }
